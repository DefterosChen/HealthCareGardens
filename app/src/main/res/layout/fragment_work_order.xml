<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".common.fragment.social.WorkOrderFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
           >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:weightSum="2">



                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/stv_sentOrder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="6dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    app:sCenterTopTextIsBold="true"
                    app:sCenterTopTextSize="@dimen/font_normal"
                    app:sCenterTopTextString="@string/kyy_social_sentOrder"
                    app:sCenterViewGravity="center"
                    app:sShapeStrokeColor="@color/icon_gray"
                    app:sShapeStrokeWidth="0.1dp"
                    app:sUseShape="false" />


                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/stv_acceptOrder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="6dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    app:sCenterTopTextIsBold="true"
                    app:sCenterTopTextSize="@dimen/font_normal"
                    app:sCenterTopTextString="@string/kyy_social_acceptOrder"
                    app:sCenterViewGravity="center"
                    app:sShapeStrokeColor="@color/icon_gray"
                    app:sShapeStrokeWidth="0.1dp"
                    app:sUseShape="false" />


            </LinearLayout>






        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>